<main class="profile">
  <header class="h-profile">
    <div class="info-profile">
      <div class="pic-container">
        <input
          type="file"
          name="avatar"
          id="avatar"
          accept="image/png, image/jpeg image/jpg"
          onchange="previewAvatar(event)"
        />
        <img
          id="avatar-preview"
          src=""
          alt="Avatar preview"
          style="display:none;"
        />
      </div>

      <section class="details-profile">
        <div class="icons">
          <a href="/profile-edit">
            <i class="fa-light fa-pen"></i>
          </a>
        </div>
        <div>
          <p>
            <span>Username</span>
            <span>{{user.username}}</span>
          </p>
          <p>
            <span>Email</span>
            <span>{{user.email}}</span>
          </p>
          <p>
            <span>Genres</span>
            <span class="g-list">{{user.genres}}</span>
          </p>
        </div>
      </section>
    </div>

    <div class="menu-profile">
      <a href="/homepage" class="homepage">Homepage</a>
      <a href="/album-new" class="create-album">Create an album</a>
      <a href="/genres" class="create-album">Modify Genres</a>
    </div>
  </header>

  <div class="albums-display">
    {{#each allAlbums}}
      <div class="album-wrapper">
        <div class="cover">
          <img src="/{{album_cover}}" alt="cover" />

        </div>
        <div class="btn-albums">
          <a href="/album-edit/{{_id}}">Edit</a>

          <form action="/profile/delete-album" method="POST">
            <input type="hidden" name="albumId" value="{{this._id}}" />
            <button type="submit">Delete</button>
          </form>

        </div>
      </div>
    {{/each}}
  </div>
</main>
<script src="/js/profile.js"></script>